# Извещение о поставке

from selenium import webdriver
from selenium.webdriver.common.keys import Keys

def authentication():
    driver = webdriver.Chrome(executable_path="C:\\Users\mor_vk\PycharmProjects\FirstSeleniumTest\driver\chromedriver.exe")
    driver.get("https://test.factoring.ru/")
    driver.maximize_windows()
    search_login = driver.find_element_by_css_selector('input#userNameInput')
    search_password = driver.find_element_by_css_selector('input#passwordInput')
    search_button = driver.find_element_by_xpath('//div[@class="fullsize form-group"]//button[@type="submit"]')
    search_login.send_keys("ewq123")
    search_password.send_keys("qwe123")
    search_button.click()  # Жмем на кнопку Войти

    def add_document():
        section_documents = driver.find_element_by_xpath('.//a[@href="#/documents/new"]//span[@class="ef-shell-nav-group__title"]')
        section_documents.click() # Переход в раздел Документы
        section_drafts = driver.find_element_by_xpath('.//a[@href="#/documents/new"]//span[@class="ef-shell-nav-group__item-title"]')
        section_drafts.click() # Переход в раздел Черновики

        def create_document():
            search_button_add = driver.find_element_by_xpath('//div[ @class ="ef-toolbar__content"]//button[@ color="primary"]')
            search_button_add.click()  # Клик на кнопку Добавить

            def create_delivery_notice():
                delivery_notice = driver.find_element_by_xpath('//*[@id="cdk-overlay-6"]/ef-select-dialog/ef-scroll-box/div/ef-panel[2]/div[2]/ef-list-item[1]/a/div[1]')
                delivery_notice.click()
                delivery_notice.find_element_by_class_name('form-control ef-entity-picker__input ng-pristine ng-valid ng-touched')
